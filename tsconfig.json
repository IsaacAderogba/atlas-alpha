{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es5", "es6", "es7", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": ["./src/**/*"],
}
